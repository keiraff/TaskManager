<header>
  <div>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand mb-0 h1" href="/">Home</a>
        <% if logged_in? %>
          <div class="collapse navbar-collapse" id="navbarNavDarkDropdown">
            <ul class="navbar-nav">
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                  Account
                </a>
                <ul class="dropdown-menu dropdown-menu-dark">
                  <li><%= link_to "Profile", current_user, class: "dropdown-item" %></li>
                  <li><a class="dropdown-item" href="/categories">Your Categories</a></li>
                  <li>
                    <hr class="dropdown-divider">
                  </li>
                  <li><%= button_to "Log out", session_path(current_user), method: :delete, class: "dropdown-item" %></li>
                </ul>
              </li>
            </ul>
          </div>
        <% else %>
          <div><%= link_to "Log in", new_session_path, class: "btn btn-outline-light" %></div>
        <% end %>
      </div>
    </nav>
  </div>
</header>
