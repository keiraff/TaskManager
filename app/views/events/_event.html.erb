<div class="card mb-3 me-2" style="width: 47%">
  <div class="card-body d-flex flex-column">
    <div class="d-flex justify-content-between">
      <div class="d-flex">
        <h4 class="card-title text-break"> <%= event.truncated_name %></h4>
        <% if event.all_day %>
          <div>
          <small class="ms-1 rounded-pill badge bg-secondary">All day</small>
          </div>
        <% end %>
      </div>
      <div class="ms-2">
        <% if event.all_day %>
          <%= event.decorated_starts_at_date %>
        <% else %>
          <span><span class="text-secondary small">from: </span><%= event.decorated_starts_at %></span>
          <p><span class="text-secondary small me-3">to: </span><%= event.decorated_ends_at %></p>
        <% end %>
      </div>
    </div>
    <div class="card-text">
      <div class="text-secondary"><small> <%= event.truncated_description %></small></div>
    </div>
    <div class="d-flex justify-content-end mt-auto">
      <% if event.notify_at.present? %>
        <small class="text-success">Notification is on</small>
      <% end %>
    </div>
    <%= link_to "", event_path(event), class: "stretched-link" %>
  </div>
</div>
