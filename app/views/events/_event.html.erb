<div class="card mb-3 me-2" style="width: 47%">
  <div class="card-body d-flex flex-column">
    <div class="d-flex justify-content-between">
      <h4 class="card-title text-break"> <%= truncate(event.name, length: 30) %></h4>
      <div class="ms-2">
      <%= event.starts_at.to_formatted_s(:long_ordinal) %>
      </div>
    </div>
    <div class="card-text">
      <div class="text-secondary"><small> <%= truncate(event.description, length: 200) %></small></div>
    </div>
    <div class="d-flex justify-content-end mt-auto">
      <% if event.notify_at.present? %>
        <small class="text-success">Notification is on</small>
      <% end %>
    </div>
    <%= link_to "", event_path(event), class: "stretched-link" %>
  </div>
</div>
