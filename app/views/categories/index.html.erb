<header class="d-flex justify-content-between">
  <h1>Categories</h1>
  <div>
    <%= link_to "Add Category", new_category_path, class: "btn btn-primary" %>
  </div>
</header>

<div>
  <% if @categories.any? %>
    <ul class="list-group list-group-flush">
      <%= render @categories %>
    </ul>
    <% if @pagy.pages > 1 %>
      <div>
        <%== pagy_nav(@pagy) %>
        <%== pagy_info @pagy %>
      </div>
    <% end %>
  <% end %>
</div>
