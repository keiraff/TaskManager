<h1>Sign in</h1>
<br>
<div class="d-inline-flex mx-auto">
  <%= form_with model: @user, url: sessions_path, method: :post do |form| %>
    <div class="mb-3">
      <%= form.label :email, class: "form-label" %>
      <%= form.email_field :email, required: true, placeholder: 'Email', class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= form.label :password, class: "form-label" %>
      <%= form.password_field :password, required: true, placeholder: 'Password', class: "form-control" %>
      <div class="mt-2 d-flex justify-content-end">
        <span class="pe-2">Don't have an account?</span>
        <a class="" href="/registrations/new">Sign up</a>
      </div>
    </div>
    <%= form.submit "Log In", class: "btn btn-primary" %>
  <% end %>
</div>
