<h1>Sign in</h1>

<%= form_with model: @user, url: sessions_path do |form| %>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email, required: true, placeholder: 'Email' %>
  </div>
  <br>
  <div>
    <%= form.label :password %>
    <%= form.password_field :password, required: true, placeholder: 'Password' %>
  </div>
  <br>
  <%= form.submit "Log In" %>
<% end %>
